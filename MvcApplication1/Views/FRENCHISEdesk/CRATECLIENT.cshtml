@using MvcApplication1.Models

@{
    Layout = null;
    string str = Session["USERNAME"].ToString();
    str = str.Substring(2);
    ViewBag.unamess = "SK" + str;
}


<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Create Client</title>
    <link rel="icon" type="image/png" href="~/Login_v1/images/icons/favicon.ico"/>
    <link href="~/adminlayout/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    
   <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.1.1/dt-1.10.24/datatables.min.css"/>
 
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.1.1/dt-1.10.24/datatables.min.js"></script>

    <script>
        $(function () {

            $("#datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                showOn: "both",
                buttonImageOnly: false,
                buttonText: "<i class=\"fa fa-calendar\" aria-hidden=\"true\"> Select Date</i>"
            });


            $("#datepicker").datepicker("setDate", new Date());
        });
    </script>
    <script>
        function myFunctioncreate1() {
            if ($("#UUNAME").val() == "" || $("#USERNAME").val() == "" || $("#PASSWORD").val() == "" || $("#CONTACTNO").val() == "") {
                alert("please enter details");
            }
            else {
                $.post("/FRENCHISEdesk/CRATECLIENTadd", { UUNAMEtxt: $("#UUNAME").val(), USERNAMEtxt: $("#USERNAME").val(), PASSWORDtxt: $("#PASSWORD").val(), CONTACTNOtxt: $("#CONTACTNO").val() }, function (response) {
                    var row = $("#example tr:last-child");
                    location.reload();
                    $("#FUNAME").val() = "";
                    $("#FRENCHISEPASSWORD").val() = "";
                    $("#USERNAME").val() = "";
                    $("#CONTACTNO").val() = "";
                    alert("data inserted succesfully");
                }
                )
            }
        }
    </script>
</head>
<body style="background-color: gray" class="jumbotron">
    <div class="row text-center" hidden>
        <div class="col-lg">
            <label for="datepicker">DATE</label>
            <input type="text" id="datepicker">
            <input hidden class="clock" id="clock" />
            <input hidden type="text" id="txt1" />
            <script>
                function txt1fx() {
                    location.href = "/FRENCHISEdesk/program";
                }
            </script>
            <button class="ui-button" onclick="txt1fx()" type="submit"><strong>Search</strong></button>
            <button class="ui-button" onclick="txt1fx()" type="submit"><strong>Exit</strong></button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg">
            <h4 class="font-weight-bold text-white">CREATE CLIENT ( @ViewBag.unamess )</h4>
            <hr style="height: 1px; color: white; background-color: white;">
        </div>
    </div>
    <div>
        <table border="0" cellspacing="5" cellpadding="5">
            <tbody>
                <tr>
                    <td>
                        <input type="text" class="form-control" tabindex="1" placeholder="CLIENT NAME" id="UUNAME">
                    </td>
                    <td>
                        <button type="submit" tabindex="5" id="create" onclick="myFunctioncreate1()" class="btn btn-primary mb-2">ADD</button>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="text" class="form-control" tabindex="2" placeholder="CLIENT ID" id="USERNAME">
                    </td>
                    <td>
                        <a href="~/FRENCHISEdesk/DASHBOARD" type="submit" class="btn btn-primary mb-2" tabindex="7">EXIT</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="text" class="form-control" tabindex="3" id="PASSWORD" placeholder="PASSWORD">
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="text" class="form-control" tabindex="4" id="CONTACTNO" placeholder="CONTACT NO.">
                    </td>
                </tr>
            </tbody>
        </table>
        <hr style="height: 1px; color: white; background-color: white;">
    </div>
    <div class="card">
        <div class="card-body table-responsive table-bordered">
            <table id="example" class="display table table-sm" style="width: 100%">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">CLIENT NAME</th>
                        <th class="text-center">CONTACTNO</th>
                        <th class="text-center">PASSWORD</th>
                        <th class="text-center">BLOCK/UNBLOCK</th>
                        <th class="text-center">EDIT</th>
                        <th class="text-center">DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i=0;
                    foreach (USERTBL item in Model as IEnumerable<MvcApplication1.Models.USERTBL>)
                    {
                        
                        string fuidvar = Convert.ToString(Session["USERID"]);
                        var ifuid = item.FUID;
                        if (ifuid == fuidvar)
                        {
                            i++;
                        <tr>
                            <td class="text-center align-middle">@i</td>
                            <td class="text-center align-middle">@item.UUNAME</td>
                            <td class="text-center align-middle">@item.CONTACTNO</td>
                            <td class="text-center align-middle">@item.PASSWORD</td>
                            <td class="text-center align-middle">
                                <input id="Checkbox1" type="checkbox" /></td>
                            <td class="text-center align-middle">
                                <button type="button" class="btn btn-primary">Edit</button>
                            </td>
                            <td class="text-center align-middle">
                                <button type="button" class="btn btn-primary">Delete</button></td>
                        </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>



    <script>
        function clock() {// We create a new Date object and assign it to a variable called "time".
            var timestamps;
            var time;
            $.get("https://vip.timezonedb.com/v2.1/get-time-zone?key=BSWYV6J8NXWD&format=json&by=zone&zone=Asia/Kolkata")
        .done(function (json) {
            console.log(json);
            timestamps = json.formatted;
            timeampm = new Date(timestamps);

            time = new Date(timestamps),

            // Access the "getHours" method on the Date object with the dot accessor.
                hours = time.getHours(),

            // Access the "getMinutes" method with the dot accessor.
                minutes = time.getMinutes(),


            years = timestamps.substring(0, 4);
            months = timestamps.substring(5, 7);
            day = timestamps.substring(8, 10);
            dates = day + "/" + months + "/" + years;
            dates2 = months + "/" + day + "/" + years;

            document.getElementById("txt1").value = dates;
            seconds = time.getSeconds();
            var ampm = hours >= 12 ? 'PM' : 'AM';
            hours = hours % 12;
            hours = hours ? hours : 12; // the hour '0' should be '12'

            document.getElementById("clock").value = harold(hours) + ":" + harold(minutes) + ":" + harold(seconds) + " " + ampm;
            function harold(standIn) {
                if (standIn < 10) {
                    standIn = '0' + standIn
                }
                return standIn;
            }
        });

        }
        setInterval(clock, 1000);
    </script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({ "order": [] });
        });
    </script>


</body>
</html>