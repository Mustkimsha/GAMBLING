<script>
    function myFunctioncreate1() {
        if ($("#FUNAME").val() == "" || $("#USERNAME").val() == "" || $("#PASSWORD").val() == "" || $("#CONTACTNO").val() == "") {
            alert("please enter details");
        }
        else 
        {
            $.post("/ADMIN/CRATEFRENCHISEadd", { FUNAMEtxt: $("#FUNAME").val(), USERNAMEtxt: $("#USERNAME").val(), PASSWORDtxt: $("#FRENCHISEPASSWORD").val(), CONTACTNOtxt: $("#CONTACTNO").val() }, function (response) {
                var row = $("#exampledttbl tr:last-child");
                location.reload();
                $("#FUNAME").val() = "";
                $("#FRENCHISEPASSWORD").val() = "";
                $("#USERNAME").val() = "";
                $("#CONTACTNO").val() = "";
                alert("data inserted succesfully");
            }
            )
            }
        }
</script>
